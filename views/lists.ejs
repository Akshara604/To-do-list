<%- include('header'); -%>
    <!-- Remember scriplet tag should be added before each code which is not html -->

    <div class="box" id="heading">
        <h1> <%= listTitle %></h1>
    </div>
    <div class="box">
    
        <%for(var i=0; i<newListItems.length; i++){ %>
            <div class="item">
                <input type="checkbox">
            <p> <%= newListItems[i] %></p>
            </div>
        <%}%>
        <form class="item" method="post" action="/">
            <input type="text" id="name" name="newItem" placeholder="New Item" autocomplete="off">
            <button type="submit" name="list" value=<%= listTitle %>>+</button>
        </form>
    </div>
    
    <%- include('footer'); -%>